                "args": [
                    "build",
                    "--bin=wren_debug",
                    "--package=safe_wren"
                ],
                "filter": {
                    "name": "wren_debug",
                    "kind": "bin"
                }
            },
            "args": [
                "interpret",
                "test/bringup/add.wren"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug tests in 'wren_test'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=wren_test",
                    "--package=safe_wren"
