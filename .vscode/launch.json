                "filter": {
                    "name": "wren_test",
                    "kind": "bin"
                }
            },
            "args": [
                "test/bringup/add.wren"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug 'wren_debug'",
